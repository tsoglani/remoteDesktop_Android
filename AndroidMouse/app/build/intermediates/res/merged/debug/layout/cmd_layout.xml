<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cmd_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black_percent_25">

    <EditText
        android:id="@+id/command_view"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="45dp"
        android:background="@color/transparent_white_hex_5"
        android:textColor="@color/PlumPurple" />

    <Button
        android:id="@+id/execute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/command_view"
        android:layout_centerHorizontal="true"
        android:text="Excecute" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/execute"
        android:fillViewport="true"
        android:focusable="true"
        android:isScrollContainer="true"
        android:overScrollMode="always"
        android:scrollbars="horizontal|vertical">

        <TextView
            android:id="@+id/cmd_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/PlumPurple"
            android:gravity="top"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:textColor="@color/LawnGreen"></TextView>
    </ScrollView>

    <CheckBox
        android:id="@+id/remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/command_view"
        android:checked="false"
        android:text="Remember" />

    <Button
        android:id="@+id/clr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/execute"
        android:scrollbars="vertical"
        android:text="clr" />
</RelativeLayout>
