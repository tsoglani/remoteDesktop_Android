<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="47dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/shut_down"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shutdown"
                android:gravity="bottom|center" />

            <Button
                android:id="@+id/resolution"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/restart_text_view"
                android:layout_centerHorizontal="true"
                android:background="@drawable/sleep"
                android:gravity="bottom|center" />

            <Button
                android:id="@+id/restart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignLeft="@+id/resolution"
                android:layout_alignStart="@+id/resolution"
                android:layout_below="@+id/shut_down_text"
                android:background="@drawable/restart"
                android:gravity="bottom|center" />

            <TextView
                android:id="@+id/shut_down_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/restart"
                android:layout_alignStart="@+id/restart"
                android:layout_below="@+id/shut_down"
                android:text="SHUT DOWN"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/restart_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/restart"
                android:layout_centerHorizontal="true"
                android:text="RESTART"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/sleep_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/restart_text_view"
                android:layout_alignStart="@+id/restart_text_view"
                android:layout_below="@+id/resolution"
                android:text="SLEEP"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
